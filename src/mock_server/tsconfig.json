{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // 从 "CommonJS" 修改为此
    "moduleResolution": "NodeNext", // 从 "node" 修改为此
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}